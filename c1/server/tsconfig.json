{
  "include": ["src/**/*"],
  "compilerOptions": {
    "target": "ES2019",
    "module": "CommonJS",
    "lib": ["ES2019", "DOM", "ES2020.Promise"],
    "allowJs": true,
    "incremental": true,
    "checkJs": true,
    "sourceMap": true,
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "moduleResolution": "node",
    "resolveJsonModule": true
  }
}
